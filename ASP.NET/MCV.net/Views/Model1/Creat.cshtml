@model Model1
@{
    ViewData["Title"] = "Creat";
}

 
 <form method="post">
      <div class="p-3 m-3 border">
          <div class="row pb-2">
              <h2 class="text-primary">Creat Model</h2>
          </div>
          <hr />
       
       <div asp-validation-summary="All">

       </div>
      <div class="mb-3" >
          <label asp-for="Name">  </label>
          <input asp-for="Name" class="form-control"/> 
          <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="mb-3" >
          <label asp-for="DisplayOrder">  </label>
          <input asp-for="DisplayOrder" class="form-control"/> 
           <span asp-validation-for="DisplayOrder" class="text-danger"></span>

      </div>
       <div class="mb-3">
          <label asp-for="CreatDateTime">  </label>
          <input asp-for="CreatDateTime" class="form-control"/> 
           <span asp-validation-for="CreatDateTime" class="text-danger"></span>

      </div>
     
           <button   type="submit" class="btn btn-primary" style="width:150px">Creat</button>
          <a class="btn btn-primary"  asp-controller="Model1" asp-action="Index" style="width:150px">List of Models</a>
       
    </div>
        
 </form>
 @section Scripts {
     @{
          <partial name="_ValidationScriptsPartial"></partial>
     }
 }
 
@{
}

 
@model Login
 

<div class="row col-12 col-lg-6">
    <div asp-validation-summary="ModelOnly" class="danger text-danger">
    </div>
    <h1>Login Form</h1>
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input class="form-control" id="Username" type="text" asp-for="Username" />
            <span class="danger text-danger" asp-validation-for="Username"></span>
        </div>

         
        <div>
            <label class="form-label">Password</label>
            <input type="password" id="password" class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" class="danger text-danger"></span>

        </div>
         <div>
            <a asp-controller="Account" asp-action="ForgetPassword">forget password?</a>
            <br />
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
        <input type="hidden" asp-for="ReturnURL" />

    </form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}